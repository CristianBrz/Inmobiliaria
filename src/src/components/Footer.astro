---
import { Home, Mail, Phone, MapPin, Facebook, Instagram, Linkedin } from 'lucide-react';

const currentYear = new Date().getFullYear();
---

<footer class="bg-blue-950 text-white">
  <div class="container mx-auto px-4 lg:px-8 py-12">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8 mb-8">
      <!-- Logo y descripción -->
      <div>
        <div class="flex items-center gap-2 mb-4">
          <div class="w-10 h-10 bg-gradient-to-br from-blue-700 to-blue-600 rounded-lg flex items-center justify-center">
            <Home className="w-6 h-6 text-amber-400" />
          </div>
          <div>
            <h3 class="text-white">Inmobiliaria</h3>
            <p class="text-xs text-gray-400">Tu hogar ideal</p>
          </div>
        </div>
        <p class="text-gray-400 text-sm">
          Más de 20 años ayudando a familias a encontrar su hogar perfecto. 
          Confianza, profesionalismo y compromiso.
        </p>
      </div>

      <!-- Enlaces rápidos -->
      <div>
        <h4 class="text-white mb-4">Enlaces Rápidos</h4>
        <ul class="space-y-2 text-sm">
          <li>
            <button data-scroll-to="inicio" class="footer-link text-gray-400 hover:text-amber-400 transition-colors">
              Inicio
            </button>
          </li>
          <li>
            <button data-scroll-to="propiedades" class="footer-link text-gray-400 hover:text-amber-400 transition-colors">
              Propiedades
            </button>
          </li>
          <li>
            <button data-scroll-to="nosotros" class="footer-link text-gray-400 hover:text-amber-400 transition-colors">
              Nosotros
            </button>
          </li>
          <li>
            <button data-scroll-to="servicios" class="footer-link text-gray-400 hover:text-amber-400 transition-colors">
              Servicios
            </button>
          </li>
          <li>
            <button data-scroll-to="contacto" class="footer-link text-gray-400 hover:text-amber-400 transition-colors">
              Contacto
            </button>
          </li>
        </ul>
      </div>

      <!-- Servicios -->
      <div>
        <h4 class="text-white mb-4">Servicios</h4>
        <ul class="space-y-2 text-sm text-gray-400">
          <li>Compra y Venta</li>
          <li>Alquileres</li>
          <li>Tasaciones</li>
          <li>Administración</li>
          <li>Inversiones</li>
        </ul>
      </div>

      <!-- Contacto -->
      <div>
        <h4 class="text-white mb-4">Contacto</h4>
        <ul class="space-y-3 text-sm">
          <li class="flex items-start gap-2 text-gray-400">
            <MapPin className="w-4 h-4 mt-0.5 flex-shrink-0" />
            <span>Av. Principal 1234<br />Ciudad, Provincia</span>
          </li>
          <li class="flex items-center gap-2 text-gray-400">
            <Phone className="w-4 h-4 flex-shrink-0" />
            <span>+54 11 1234-5678</span>
          </li>
          <li class="flex items-center gap-2 text-gray-400">
            <Mail className="w-4 h-4 flex-shrink-0" />
            <span>info@inmobiliaria.com.ar</span>
          </li>
        </ul>

        <div class="flex gap-3 mt-4">
          <a
            href="https://facebook.com"
            target="_blank"
            rel="noopener noreferrer"
            class="w-8 h-8 bg-blue-900 rounded-lg flex items-center justify-center hover:bg-blue-800 transition-colors"
          >
            <Facebook className="w-4 h-4" />
          </a>
          <a
            href="https://instagram.com"
            target="_blank"
            rel="noopener noreferrer"
            class="w-8 h-8 bg-blue-900 rounded-lg flex items-center justify-center hover:bg-blue-800 transition-colors"
          >
            <Instagram className="w-4 h-4" />
          </a>
          <a
            href="https://linkedin.com"
            target="_blank"
            rel="noopener noreferrer"
            class="w-8 h-8 bg-blue-900 rounded-lg flex items-center justify-center hover:bg-blue-800 transition-colors"
          >
            <Linkedin className="w-4 h-4" />
          </a>
        </div>
      </div>
    </div>

    <!-- Línea divisoria -->
    <div class="border-t border-blue-900 pt-8">
      <div class="flex flex-col md:flex-row justify-between items-center gap-4 text-sm text-gray-400">
        <p>© {currentYear} Inmobiliaria. Todos los derechos reservados.</p>
        <div class="flex gap-6">
          <a href="#" class="hover:text-amber-400 transition-colors">
            Términos y Condiciones
          </a>
          <a href="#" class="hover:text-amber-400 transition-colors">
            Política de Privacidad
          </a>
        </div>
      </div>
    </div>
  </div>
</footer>

<script>
  document.querySelectorAll('.footer-link').forEach(button => {
    button.addEventListener('click', (e) => {
      const target = (e.currentTarget as HTMLElement).getAttribute('data-scroll-to');
      if (target) {
        const element = document.getElementById(target);
        if (element) {
          const offset = 80;
          const elementPosition = element.getBoundingClientRect().top + window.pageYOffset;
          window.scrollTo({
            top: elementPosition - offset,
            behavior: 'smooth'
          });
        }
      }
    });
  });
</script>
